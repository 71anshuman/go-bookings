{{template "base" .}}

{{define "content"}}
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1 class="mt-5">Reservation Summary</h1>
        <hr/>
        {{$res := index .Data "reservation" }}
        <table class="table table-striped">
            <thead></thead>
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>{{$res.FirstName}} {{$res.LastName}}</td>
                </tr>
                <tr>
                  <td>Room Name</td>
                  <td>{{$res.Room.RoomName}}</td>
                </tr>
                <tr>
                    <td>Arrival:</td>
                    <td>{{index .StringMap "start_date"}}</td>
                </tr>
                <tr>
                    <td>Departure:</td>
                    <td>{{index .StringMap "end_date"}}</td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td>{{$res.Email}}</td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td>{{$res.Phone}}</td>
                </tr>
            </tbody>
        </table>
      </div>
    </div>
  </div>
{{end}}